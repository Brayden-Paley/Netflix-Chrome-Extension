{
    "name": "NetflixImdb",
    "description": "Add the IMDB ratings to netflix shows",
    "version": "1",
    "manifest_version": 2,
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/favicon_icon_NetflixExt16.png"
        }
    },
    "content_scripts": [
      {
        "matches": ["https://www.netflix.com/browse","http://www.netflix.com/browse"],
        "js": ["clearStorage.js"]
      }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons":{
        "16": "images/favicon_icon_NetflixExt16.png"
    }
}
